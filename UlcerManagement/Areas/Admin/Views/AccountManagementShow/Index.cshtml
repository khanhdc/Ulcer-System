@model List<Models.Framework.ACCOUNT>
@using Models.Framework
@{
    ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="en">


<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="row">
                                <div class="col-sm"><h6 class="m-0 font-weight-bold text-primary">Account Management</h6></div>
                                <div class="col-sm">
                                    <button type="button" class="float-right btn btn-primary">Add new</button>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>User name</th>
                                            <th>Full name</th>
                                            <th>Group</th>
                                            <th>Phone</th>
                                            <th>Address date</th>
                                            <th>DOB</th>
                                            <th>EMAIL</th>
                                            <th>GENDER</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>User name</th>
                                            <th>Full name</th>
                                            <th>Group</th>
                                            <th>Phone</th>
                                            <th>Address date</th>
                                            <th>DOB</th>
                                            <th>EMAIL</th>
                                            <th>GENDER</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{
                                            int count=0;
                                            foreach (ACCOUNT item in Model)
                                            {
                                                count = count + 1;
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@item.USERNAME</td>
                                                    <td>@item.FULL_NAME</td>

                                                    @if (item.GROUP_ID == 0) { <td>Admin</td>; }
                                                    else
                                                        if (item.GROUP_ID == 1) { <td>Doctor</td>; }
                                                    else
                                                        if (item.GROUP_ID == 2) { <td>Nurse</td>; }
                                                    else
                                                        if (item.GROUP_ID == 3) { <td>Patient</td>; }
                                                    
                                                    <td>@item.PHONE</td>
                                                    <td>@item.ADDRESS</td>
                                                    @if (@item.DOB != null)
                                                    {
                                                        <td>@item.DOB.Value.ToString("dd/MM/yyyy")</td>
                                                    }
                                                    else
                                                    {
                                                        <td>-</td>
                                                    }
                                                    <td>@item.EMAIL</td>
                                                    <td>@item.SEX</td>
                                                    <td>
                                                        <a title="Edit Account" href="@Url.Action("ViewProfile", "ProfileEditor", new {area = "", username = @item.USERNAME})">
                                                            <i class="fas fa-fw fa-wrench"></i>
                                                        </a>

                                                        <a title="Delete Account" href="@Url.Action("DeleteProfile", "ProfileEditor", new {area = "", username = @item.USERNAME})">
                                                            <i class="fas fa-fw fa-trash-alt"></i>
                                                        </a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>



</body>

</html>